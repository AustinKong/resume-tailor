{
  "name": "atto",
  "version": "0.1.0-alpha",
  "private": true,
  "description": "A local-first, open-source tool for applicants' to track and customize job applications.",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "lint:fix:frontend": "npm --prefix frontend run lint:fix",

    "dev:backend": "backend/venv/bin/python backend/run.py",
    "lint:fix:backend": "cd backend && ruff check --fix app",

    "dev": "concurrently -n backend,frontend -c magenta,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",

    "build:frontend": "cd frontend && npm run build",
    "build:exe": "backend/venv/bin/pyinstaller atto.spec",
    "dist": "npm run build:frontend && npm run build:exe"
  }
}
