{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Resume Tailor",
  "version": "0.1.0",
  "identifier": "com.tauri.resume_tailor",
  "build": {
    "frontendDist": "../frontend/dist",
    "beforeDevCommand": "npm run dev --prefix ../frontend",
    "beforeBuildCommand": "npm run build --prefix ../frontend",
    "devUrl": "http://localhost:5173",
  },
  "app": {
    "windows": [
      {
        "title": "Resume Tailor",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {}
  }
}
